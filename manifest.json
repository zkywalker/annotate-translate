{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "0.1.0",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "src/options/options.html",
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/providers/prompt-templates.js",
        "src/providers/base-ai-provider.js",
        "src/providers/openai-provider.js",
        "src/services/translation-service.js",
        "src/content/translation-ui.js",
        "src/content/content.js"
      ],
      "css": [
        "src/styles/translation-ui.css",
        "src/content/content.css"
      ]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/icon_logo_google.svg",
        "assets/icons/icon_logo_youdao.svg",
        "assets/icons/icon_logo_deepl.svg",
        "assets/icons/icon_logo_ai.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
